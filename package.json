{
  "name": "offgrid_network",
  "version": "1.0.0",
  "description": "A personal project for CSS Grid layouts.",
  "main": "app.js",
  "scripts": {
    "watch:sass": "node-sass public/sass/main.scss public/style.css -w",
    "devserver": "live-server --host=localhost --browser=chrome",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass public/sass/main.scss public/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" public/style.comp.css -o public/style.prefix.css",
    "compress:css": "node-sass public/style.prefix.css public/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/njgorton/offgrid_network.git"
  },
  "author": "Nathaniel Gorton",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/njgorton/offgrid_network/issues"
  },
  "homepage": "https://github.com/njgorton/offgrid_network#readme",
  "dependencies": {
    "autoprefixer": "^8.2.0",
    "concat": "^1.0.3",
    "ejs": "^2.5.8",
    "express": "^4.16.3",
    "flickity": "^2.1.1",
    "module": "0.0.x",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "surge": "^0.20.1"
  }
}
